<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="#388E3C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="10dp"
                        android:id="@+id/tv_title"
                        android:textSize="10pt"
                        android:textColor="@color/material_on_surface_emphasis_high_type"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/iv_more"
                        android:src="@drawable/ic_baseline_more_vert"
                        android:layout_width="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="60dp"
                        android:gravity="end"
                        android:layout_gravity="end"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="9pt"
                android:textColor="@color/material_on_surface_emphasis_high_type"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hadist_title"/>
            <TextView
                android:id="@+id/tv_arabic"
                android:layout_marginTop="10dp"
                android:textSize="9pt"
                android:textColor="@color/material_on_surface_emphasis_high_type"
                android:fontFamily="@font/lateef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="9pt"
                android:textColor="@color/material_on_surface_emphasis_high_type"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/translate_title"/>
            <TextView
                android:id="@+id/tv_translate"
                android:layout_marginTop="10dp"
                android:textSize="9pt"
                android:textColor="@color/material_on_surface_emphasis_high_type"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/progressBarrLoading"/>


    </LinearLayout>

</ScrollView>